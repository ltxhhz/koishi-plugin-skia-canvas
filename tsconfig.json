{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "ESNext",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
  },
  "include": [
    "src",
  ],
}
